{
  "name": "tdd-tools",
  "version": "1.0.0",
  "description": "This project was created to test TDD Frameworks and tools",
  "main": "index.js",
  "scripts": {
    "prepush": "npm run lint && npm run test:coverage",
    "test": "cross-env NODE_ENV=test nyc node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "lint": "node_modules/.bin/eslint src/**/*.js",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc --all npm test"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "coverage/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Matheus-de-Souza/tdd-tools.git"
  },
  "keywords": [
    "tdd",
    "testing",
    "frameworks"
  ],
  "author": "Matheus de Souza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matheus-de-Souza/tdd-tools/issues"
  },
  "homepage": "https://github.com/Matheus-de-Souza/tdd-tools#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^5.0.4",
    "nyc": "^11.4.1"
  }
}
